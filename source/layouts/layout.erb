<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "My awesome new app" %></title>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="http://fb.me/react-0.12.1.js"></script>

    <%= stylesheet_link_tag "normalize", "application" %>
  </head>
  
  <body class="<%= page_classes %>">
    <div class="container">
      <%= yield %>
    </div>


    <%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js" %>
    <%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js" %>
    <%= javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.1.2/backbone-min.js" %>
    <%= javascript_include_tag "http://fb.me/react-0.12.1.js" %>
    <%= javascript_include_tag "http://rawgithub.com/magalhas/backbone-react-component/master/lib/component.js" %>
    <%= javascript_include_tag "application" %>
  </body>
</html>